    "chalk": "^2.4.1",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "download-git-repo": "^1.0.2",
    "figlet": "^1.2.0",
    "fs-extra": "^7.0.0",
    "package-json": "^6.5.0",
    "replace-in-file": "^6.0.0",
